extends base.pug

block scripts
    scripts(src="../static/index.js")
block style 
    style
        include ../static/style.css
        include ../static/contact.css
block content 
    h1 Contact Us
    div.container
        form(action="/contact", method="post" )
            input(type="text", name="name", placeholder="Enter your name", class="each")
            input(type="text", name="gender", placeholder="Enter your gender", class="each")
            input(type="email", name="email", placeholder="Enter your email", class="each")
            input(type="phone", name="phone", placeholder="Enter your Phone number", class="each")
            input(type="text", name="age", placeholder="Enter your age", class="each")
            input(type="text", name="address", placeholder="Enter your address", class="each")
            button.btn
                | Submit